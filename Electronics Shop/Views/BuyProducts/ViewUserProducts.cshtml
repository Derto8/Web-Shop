@model IEnumerable<BuyProduct>

@{
    if(Model.Count() == 0){
        <h1 class="text-secondary display-5 m-2">У вас нету покупок</h1>
    }
    else{
        foreach (var u in Model)
        {
            <div class="row shadow mb-4 bg-body rounded">
                <div class="col-lg-2">
                    <img class="img-thumbnail m-3" src="@u.Image" alt="Изображение отсутсвует" />
                </div>

                <div class="col m-3">
                    <p>Товар: @u.Name</p>
                    <p>Цена: @u.Price</p>
                    <p>Дата покупки: @u.Date</p>
                </div>
            </div>
        }
    }

}