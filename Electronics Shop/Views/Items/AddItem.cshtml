<form class="p-4 shadow bg-body rounded" method="post" enctype="multipart/form-data">

    <h1 class="display-4">Добавление товара</h1>

    <div class="form-group">
        <label>Название</label>
        <input class="form-control" name="Name" placeholder="Введите название товара">
    </div>

    <div class="form-group">
        <label>Описание</label>
        <input class="form-control" name="Description" placeholder="Введите описание товара">
    </div>

    <div class="form-group">
        <label>Цена</label>
        <input class="form-control" name="Price" placeholder="Введите цену на товар">
    </div>

    <div class="mb-3">
        <input type="file" class="form-control" name="files" required>
        <div class="invalid-feedback">Загрузите изображение товара...</div>
    </div>

    <input type="submit" class="btn btn-outline-success w-100">
</form>