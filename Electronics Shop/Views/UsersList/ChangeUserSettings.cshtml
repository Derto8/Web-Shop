@model Users;

<form class="p-4 shadow bg-body rounded" method="post" enctype="multipart/form-data">

    <h1 class="display-4">Изменение данных о пользователе</h1>

    <div class="form-group">
        <label>Логин</label>
        <input class="form-control" name="Login" value="@Model.Login">
    </div>

    <div class="form-group">
        <label>Пароль</label>
        <input class="form-control" name="Password" value="@Model.Password">
    </div>

    <div class="form-group">
        <label>Ф.И.О.</label>
        <input class="form-control" name="FIO" value="@Model.FIO">
    </div>

    <div class="form-group">
        <label>Почта</label>
        <input class="form-control" name="EMail" value="@Model.Email">
    </div>

    <div class="form-group">
        <label>Телефон</label>
        <input class="form-control" name="Phone" value="@Model.Phone">
    </div>

    <div>
        <label>Выберите пользователя</label>
        <select class="m-2" name="Status">
            <option class="dropdown-item" value="User">Пользователь</option>
            <option class="dropdown-item" value="Adm">Администратор</option>
        </select>
    </div>

    <div class="mb-3">
        <input type="file" class="form-control" name="files" required>
        <div class="invalid-feedback">Загрузите изображение...</div>
    </div>
    <p class="text-danger">@ViewBag.Error</p>

    <input type="submit" class="btn btn-outline-success w-100">
</form>