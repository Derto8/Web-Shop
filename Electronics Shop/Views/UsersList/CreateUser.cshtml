<form class="p-4 shadow bg-body rounded" method="post" enctype="multipart/form-data">

    <h1 class="display-4">Создание пользователя</h1>

    <div class="form-group">
        <label>Логин</label>
        <input class="form-control" name="Login" placeholder="Введите логин">
    </div>

    <div class="form-group">
        <label>Пароль</label>
        <input class="form-control" name="Password" type="password" placeholder="Введите пароль">
    </div>

    <div class="form-group">
        <label>Ф.И.О.</label>
        <input class="form-control" name="FIO" placeholder="Введите Ф.И.О.">
    </div>

    <div class="form-group">
        <label>Почта</label>
        <input class="form-control" name="EMail" placeholder="Введите почту">
    </div>

    <div class="form-group">
        <label>Телефон</label>
        <input class="form-control" name="Phone" placeholder="Введите телефон">
    </div>

    <div>
        <label>Выберите пользователя</label>
        <select class="m-2" name="Status">
            <option class="dropdown-item" value="User">Пользователь</option>
            <option class="dropdown-item" value="Adm">Администратор</option>
        </select>
    </div>

    <div class="mb-3">
        <input type="file" class="form-control" name="files" required>
        <div class="invalid-feedback">Загрузите изображение пользователя...</div>
    </div>

    <p class="text-danger">@ViewBag.Error</p>

    <input type="submit" class="btn btn-outline-success w-100">
</form>