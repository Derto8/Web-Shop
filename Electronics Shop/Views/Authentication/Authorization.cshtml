<form class="p-4 shadow bg-body rounded" method="post" enctype="multipart/form-data">

    <h1 class="display-4">Авторизация</h1>

    <div class="form-group">
        <label>Логин</label>
        <input class="form-control" name="Login" placeholder="Введите логин">
    </div>

    <div class="form-group">
        <label>Пароль</label>
        <input class="form-control" name="Password" type="password">
    </div>
    <p class="text-danger">@ViewBag.Error</p>

    <input type="submit" class="btn btn-outline-success w-100" />

    <a class="nav-link" asp-controller="Authentication" asp-action="Registration">Нету аккаунта?</a>
</form>